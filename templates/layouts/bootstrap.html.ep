<!DOCTYPE html>
<html>
  <head>
     <title><%= title %></title>
     %= stylesheet url_for("/css/bootstrap.min.css")
     %= stylesheet url_for("/css/font-awesome.min.css")
  <style type="text/css">
  body { 
    padding-top: 60px;
  }

  </style>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-inner navbar-fixed-top">
    <a class="brand" href="/">חדשות</a>
    <ul class="nav">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle"
      data-toggle="dropdown">Settings <b class="caret"></b></a>
      <ul class="dropdown-menu">
      <li><%= modal_btn 'Import...' => 'import' %></li>
      <li><%= modal_btn 'Debug...' => 'debug' %></li>
      </ul>
     </li>
    <li><a href="/feed/river">Feeds 1</a></li>
    <li><a href="/view/feed">Feeds (js)</a></li>
    <li><a href="/settings/blogroll">Blogroll</a></li>
    <li><a href="/view/main">Blogroll (js)</a></li>
    </ul>
    </div>
    <div class="container">
       <%= content %>
    </div>
%= modal 'import', 'Import Subscriptions', begin 
%= form_for '/settings/import' => (method => 'post', enctype => 'multipart/form-data') => begin
%= file_field 'opmlfile' => multiple => 'true'
%= submit_button 'Import', 'class' => 'btn'
% end
% end 

%= modal 'debug', 'Debug feed parsing', begin 
%= form_for '/feed/debug' => (method => 'post', enctype => 'multipart/form-data') => begin
%= file_field 'file' => multiple => 'true'
%= submit_button 'Show', 'class' => 'btn'
% end
% end

     %= javascript "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
     %= javascript url_for("/js/bootstrap.min.js")
     %= javascript url_for('/js/hadashot.js') 
  </body>
</html>
