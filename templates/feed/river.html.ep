%layout 'bootstrap';
% title "What What?";

<h1>What kept you?</h1>
<p>You have <%= $total %> items</p>

% foreach my $item (@$items) {
  <h4><%= $item->{title} %></h4>
  <p><%= todate($item->{published}) %><a href="<%= $item->{link} %>"><%= $item->{link} %></a>
  <a href="/feed/debug/?_id=<%= $item->{_id} %>">debug</a></p>
  <div><%== $item->{description} %></div>
  <div class="well"><%= dumper $item %></div>
% }



