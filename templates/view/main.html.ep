% layout 'bootstrap';
% title 'Now with javascript';
<script type="text/html" id="blogroll_tmpl">
<div>
<%% if (!obj.active || obj.active === 0) { %><del> <%% } %>
<a href="<%%=obj.xmlUrl%>"><i class="icon-rss"></i> rss</a>
<a href="<%%=obj.htmlUrl%>" dir="ltr"><%%=obj.title%></a>
<a href="/view/feed?src=<%%= window.encodeURIComponent(obj.xmlUrl) %>" dir="ltr">go</a>
<%% if (obj.categories) { %>
<strong>Categories: </strong> [ <%%= obj.categories.join(', ') %> ]
<%% } else {console.log(obj.xmlUrl)} %>
<%% if (obj.etag) { %>
Etag: <%%= obj.etag %>
<%% } %>
<%% if (obj.last_modified) { %>
Last Modified: <%%= obj.last_modified %>
<%% } %>
<%% if (obj.items) { %>
Items: <%%= obj.items %>
<%% } else { %>
0 Items
<%% } %>
<%% if (obj.last && obj.last > 0) { %>
Latest item: <%%= new Date(obj.last) %>
<%% } else { %>
...
<%% if (!obj.active || obj.active === 0) { %></del> <%% } %>
<%% } %>


</div>
</script>

<div id="sublist" class="col-md-7 col-md-offset-2">
<p>It looks like you aren't subscribed to any feeds.</p>
<p>Use <b>Settings -> Import...</b> to load some.</p>
</div>
<script language="javascript">
  var f = 0;
  document.onreadystatechange = 
  function(){
    if (f == 0) {
      subs = new hadashot.collection({
        item_template: 'blogroll_tmpl',
        url: '/settings/blogroll',
        args: { js: 1},
        root: 'subs',
        onload: function() {
          if (this.items.length > 0) {
          $('#sublist').empty().append(this.el);
          }
        }
      });
      subs.load();
    f = 1;
    }
   };
</script>

